<%= simple_form_for(@shipment) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :cost_in_nis %>
      <%= f.input :date %>
      <%= f.fields_for :item_lines do |builder| %>
          <%= render 'item_line_fields', f: builder %>
      <% end %>

      <%= link_to_add_fields "Add Item Line", f, :item_lines %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
