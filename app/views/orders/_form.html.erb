<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.association :sales_person, label_method: :email,selected: current_user.id %>
  </div>

    <%= f.fields_for :sales  do |builder| %>
        <%= render partial: 'sale_fields', :locals=>{:f => builder}  %>
    <% end %>
    <%= link_to_add_fields "Add A Sale", f, :sales %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
